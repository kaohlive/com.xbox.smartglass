{
  "id": "com.xbox.smartglass",
  "version": "0.2.0",
  "compatibility": ">=3.0.0",
  "brandColor": "#107c10",
  "sdk": 2,
  "name": {
    "en": "Xbox console companion"
  },
  "description": {
    "en": "Interact with your Xbox using the smartglass features"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Kaoh",
    "email": "kaoh@kaoh.nl"
  },
  "flow": {
    "triggers": [
      {
        "id": "app-playing-changed",
        "title": {
          "en": "App playing changed",
          "nl": "Actieve app is veranderd"
        },
        "hint": {
          "en": "Is triggered when the console makes another app active",
          "nl": "Wordt geactiveerd als de console een andere app actief maakt"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=xbox-console"
          },
          {
            "name": "console",
            "type": "device",
            "filter": "driver_id=xbox-console"
          }
        ],
        "tokens": [
          {
            "type": "string",
            "name": "new_app_name",
            "title": {
              "en": "New playing app name",
              "nl": "Nieuwe actieve app naam"
            },
            "example": {
              "en": "The name of the new app that is active",
              "nl": "De naam van de nieuwe app die actief is geworden"
            }
          }
        ]
      },
      {
        "id": "xbox-powered-on",
        "title": {
          "en": "Xbox powered on",
          "nl": "Xbox is aangegaan"
        },
        "hint": {
          "en": "Triggers when the console is turned on",
          "nl": "Triggers als de console aangaat"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=xbox-console"
          },
          {
            "name": "console",
            "type": "device",
            "filter": "driver_id=xbox-console"
          }
        ]
      },
      {
        "id": "xbox-powered-off",
        "title": {
          "en": "Xbox powered off",
          "nl": "Xbox is uitgegaan"
        },
        "hint": {
          "en": "Triggers when the console is turned off",
          "nl": "Triggers als de console uitgaat"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=xbox-console"
          },
          {
            "name": "console",
            "type": "device",
            "filter": "driver_id=xbox-console"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "send-controller-button",
        "title": {
          "en": "Press a controller button",
          "nl": "Druk een controller knop in"
        },
        "hint": {
          "en": "Send a controller button to your console",
          "nl": "Stuur een controller knop naar je console"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=xbox-console"
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=xbox-console"
          },
          {
            "type": "dropdown",
            "name": "controller_button",
            "values": [
              {
                "id": "nexus",
                "label": {
                  "en": "Nexus"
                }
              },
              {
                "id": "menu",
                "label": {
                  "en": "Menu"
                }
              },
              {
                "id": "view",
                "label": {
                  "en": "View"
                }
              },
              {
                "id": "x",
                "label": {
                  "en": "X"
                }
              },
              {
                "id": "y",
                "label": {
                  "en": "Y"
                }
              },
              {
                "id": "a",
                "label": {
                  "en": "A"
                }
              },
              {
                "id": "b",
                "label": {
                  "en": "B"
                }
              },
              {
                "id": "up",
                "label": {
                  "en": "Up"
                }
              },
              {
                "id": "down",
                "label": {
                  "en": "Down"
                }
              },
              {
                "id": "left",
                "label": {
                  "en": "Left"
                }
              },
              {
                "id": "right",
                "label": {
                  "en": "Right"
                }
              }
            ],
            "placeholder": {
              "en": "Button",
              "nl": "Knop"
            }
          }
        ]
      },
      {
        "id": "send-media-button",
        "title": {
          "en": "Press a media button",
          "nl": "Druk een media knop in"
        },
        "hint": {
          "en": "Send a media button to your console",
          "nl": "Stuur een media knop naar je console"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=xbox-console"
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=xbox-console"
          },
          {
            "type": "dropdown",
            "name": "media_button",
            "values": [
              {
                "id": "playpause",
                "label": {
                  "en": "Toggle Play"
                }
              },
              {
                "id": "play",
                "label": {
                  "en": "Play"
                }
              },
              {
                "id": "pause",
                "label": {
                  "en": "Pause"
                }
              },
              {
                "id": "stop",
                "label": {
                  "en": "Stop"
                }
              },
              {
                "id": "prev_track",
                "label": {
                  "en": "Prev. Track"
                }
              },
              {
                "id": "next_track",
                "label": {
                  "en": "Next Track"
                }
              }
            ],
            "placeholder": {
              "en": "Button",
              "nl": "Knop"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Xbox console"
      },
      "class": "tv",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "additional_ip"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/xbox-console/assets/images/large.png",
        "small": "/drivers/xbox-console/assets/images/small.png"
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Console settings",
            "nl": "Console instellingen"
          },
          "children": [
            {
              "id": "liveid",
              "type": "text",
              "label": {
                "en": "Live ID",
                "nl": "Live ID"
              },
              "value": ""
            },
            {
              "id": "console_address",
              "type": "text",
              "label": {
                "en": "IP4 address",
                "nl": "IP4 addres"
              },
              "value": ""
            }
          ]
        }
      ],
      "id": "xbox-console"
    }
  ],
  "capabilities": {
    "controller_A": {
      "type": "boolean",
      "title": {
        "en": "A"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_B": {
      "type": "boolean",
      "title": {
        "en": "B"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_Down": {
      "type": "boolean",
      "title": {
        "en": "Down"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_Left": {
      "type": "boolean",
      "title": {
        "en": "Left"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_Menu": {
      "type": "boolean",
      "title": {
        "en": "Menu"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_nexus": {
      "type": "boolean",
      "title": {
        "en": "Nexus"
      },
      "getable": false,
      "setable": true,
      "icon": "./assets/nexus.svg"
    },
    "controller_Right": {
      "type": "boolean",
      "title": {
        "en": "Right"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_Up": {
      "type": "boolean",
      "title": {
        "en": "Up"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_View": {
      "type": "boolean",
      "title": {
        "en": "View"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_X": {
      "type": "boolean",
      "title": {
        "en": "X"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    },
    "controller_Y": {
      "type": "boolean",
      "title": {
        "en": "Y"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": true
    }
  }
}